[user]
	name = Dan Richards
	email = dan.m.richards@gmail.com
[core]
	autocrlf = false
	safecrlf = false
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	rb = rebase
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
	dump = cat-file -p
	plom = pull origin master
	psom = push origin master
	plo = pull origin
	pso = push origin
	lg = log --oneline --abbrev-commit --all --graph --decorate --color
  lgv = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  ps = push
  pl = pull
